<div class="container p-3">
  <div class="title-meetups-bookmarks">
    <h1 class="mb-3">Modifications informations</h1>
  </div>
  <div class="">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, label: "Adresse email" %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :nickname,
                    label: "Pseudo",
                    required: true %>

        <%= f.input :password,
                    label: "Mot de passe",
                    hint: "Laisser en blanc si vous ne souhaitez pas changer le mot de passe",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirmation du mot de passe",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    label: "Mot de passe actuel",
                    hint: "Il faut le mot de passe actuel pour valider les changements",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Modifier" %>
      </div>
    <% end %>


    <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes vous sure?" }, method: :delete %></p>
  </div>
</div>
