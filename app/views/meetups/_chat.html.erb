<div class="bg-grey card-chat" data-user-id="<%= current_user.id %>">
  <div id="messages" data-meetup-id="<%= meetup.id %>">
      <% meetup.messages.each do |message| %>
        <%= render 'messages/message', message: message %>
      <% end %>
  </div>
  <%= simple_form_for [ meetup, message ], html: { class: "chat-form"}, remote: true do |f| %>
    <%= f.input :content, label: false, placeholder: "Message" %>
    <%= button_tag type: 'submit', class: "icon-send" do %>
      <i class='far fa-paper-plane'></i>
    <% end %>
    </div>
  <% end %>
</div>
